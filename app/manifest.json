{
    "name": "TIM",
    "version": "0.1.6",
    "manifest_version": 2,
    "description": "Time is Money -  how much money you lose while web surfing",
    "icons": {
        "16": "images/tim-16.png",
        "128": "images/tim-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "page_action": {
        "default_icon": {
            "19": "images/tim-19.png",
            "38": "images/tim-38.png"
        },
        "default_title": "TIM",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": [
        "tabs",
        "idle",
        "http://*/*",
        "https://*/*"
    ],
     "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.google.com; object-src 'self'"
}
